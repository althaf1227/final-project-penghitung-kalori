<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp"
    android:id="@+id/main"
    android:background="@color/white"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HitungPembakaranKaloriActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hitung Pembakaran Kalori"
        android:textSize="24dp"
        android:gravity="center"
        android:layout_margin="20dp"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/green_primary"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:textColorHint="@color/black"
        android:layout_marginTop="12dp">
        <AutoCompleteTextView
            android:id="@+id/autoOlahraga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:textColor="@color/black"
            android:paddingVertical="12dp"
            android:paddingHorizontal="16dp"
            android:hint="Pilih Olahraga"
            android:inputType="none"
            android:focusable="true"
            android:clickable="true"
            android:fontFamily="@font/poppins_regular"/>
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Berat Badan (kg)"
        android:layout_marginTop="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etBeratBadan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Durasi (menit)"
        android:layout_marginTop="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etDurasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnHitungTerbakar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hitung Kalori Terbakar"
        android:textColor="@color/white"
        android:backgroundTint="@color/green_dark"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginTop="20dp"
        style="@style/Widget.Material3.Button.IconButton.Filled" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvHasilKaloriTerbakar"
        android:text="Kalori Terbakar: -"
        android:textSize="18sp"
        android:layout_marginTop="24dp" />

</LinearLayout>